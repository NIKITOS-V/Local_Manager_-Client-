#:set messages_panel_size_hint_y 0.9
#:set send_message_panel_size_hint_y 1 - messages_panel_size_hint_y

#:set message_input_size_hint_x 0.9

<ChatScreen>:
    canvas:
        Color:
            rgba: self.bg_color

        Rectangle:
            size: self.size

    BoxLayout:
        id: main_box_layout
        padding: 5
        spacing: 5
        orientation: "vertical"

        MessagesPanel:
            id: messages_panel
            font_size: root.text_size
            multiline: True
            readonly: True
            background_active: ""
            background_normal: ""
            background_color: self.bg_color
            foreground_color: self.fg_color
            size_hint: 1, messages_panel_size_hint_y

        BoxLayout:
            spacing: main_box_layout.spacing
            orientation: "horizontal"
            size_hint: 1, send_message_panel_size_hint_y

            TextInput:
                id: input_message
                font_size: root.text_size
                multiline: True
                background_active: ""
                background_normal: ""
                background_color: root.message_input_color
                foreground_color: root.text_color
                size_hint: message_input_size_hint_x, 1
                on_size: root.text_size = round(self.height * 0.3)

            SendMessageButton:
                size_hint: None, 1
                width: self.height
                background_active: ""
                background_normal: ""
                background_color: self.bg_active_color if self.state == "active" else self.bg_normal_color
                on_press: root.send_message(input_message.text)
